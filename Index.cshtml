<script type="text/javascript">
    $("#btnupdate").hide();
    $('#btnchx').click(function () {
        check();
    });
    function check() {
        if ($('#btnchx').is(':checked'))
         {
             $('#tex5').val(1);
            // alert(1);
        }
        else {
            $('#tex5').val(0);
         //   alert(0);
        }
    }
   

  $("#mydatatable").dataTable({
      "bDestroy": true,
      "sScrollY": "200px",
    "sAjaxSource": '/Home/ggg',

    "aoColumns": [
                      { "sName": "" },
                      { "sName": "" },
                      { "sName": "" },
                      { "sName": "" },
                       { "sName": "", "fnRender": function (oObj) {
                           return '<center><button type="button" id="hhh1" class="hhh">Edit</button></center>'
                       }
                        },
                      
     ]
           });

           $("#mydatatable tbody").on("click", ".hhh", function () {
               // alert("a");
               
               var nRow = $(this).parents('tr')[0];

               var table1 = $('#mydatatable').dataTable();

               var iPos = table1.fnGetPosition(nRow);

               var aData = table1.fnGetData(iPos);

               var sa = aData[1];
               // alert(sa);
               var sa1 = aData[2];
               // alert(sa1);
               var sa2 = aData[3];
               var sa3 = aData[0];
               //alert(sa2);
               var name = $("#tex1").val(sa);
               var age = $("#tex2").val(sa1);
               var place = $("#tex3").val(sa2);
               var id = $("#tex4").val(sa3);
               $("#btnsave").hide();
               $("#btnupdate").show();

           });
           $("#btnupdate").click(function () {
               // alert();
               var name = $("#tex1").val();
               //   alert(name);
               var age = $("#tex2").val();
               //  alert(age);
               var place = $("#tex3").val();
               // alert(place);
               var id = $("#tex4").val();
               $.ajax({
                   url: '../Home/update',
                   type: 'post',
                   data: { id: id, name: name, age: age, place: place },
                   success: function (data) {
                       alert("Updated Successfully");
                       window.location.href = "../Home/Index";
                   }
               });
           });

               $("#btnsave").click(function () {
                   //alert("hai");
                   var name = $("#tex1").val();
                   var age = $("#tex2").val();
                   var place = $("#tex3").val();
                   var tick = $("#tex5").val();
                  // alert(tick);
                   $.ajax({
                       url: '/Home/save',
                       type: 'post',
                       data: { name: name, age: age, place: place, tick: tick },
                       success: function (data) {
                           alert("saved successfully");
                           window.location.href = "../Home/Index";
                       }
                   });
               });



</script>